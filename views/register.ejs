<%- include("partials/header") %>

<section id="main" class="wrapper">
    <div class="inner">

        <header class="major">
            <h2>Regisztráció</h2>
            <p>Hozz létre egy új felhasználói fiókot.</p>
        </header>

        <% if (error) { %>
            <div class="alert-error"><%= error %></div>
        <% } %>

        <div class="contact-card">
            <form method="POST" action="/register">
                <div class="fields">

                    <div class="field">
                        <label for="email">E-mail cím</label>
                        <input type="email" id="email" name="email"
                               placeholder="Add meg az e-mail címed" required>
                    </div>

                    <div class="field">
                        <label for="password">Jelszó</label>
                        <input type="password" id="password" name="password"
                               placeholder="Válassz jelszót" required>
                    </div>

                    <div class="field">
                        <label for="confirm">Jelszó ismét</label>
                        <input type="password" id="confirm" name="confirm"
                               placeholder="Írd be újra a jelszót" required>
                    </div>

                </div>

                <ul class="actions">
                    <li><button type="submit" class="button primary">Regisztráció</button></li>
                </ul>
            </form>
        </div>

    </div>
</section>

<%- include("partials/footer") %>
