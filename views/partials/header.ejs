<!DOCTYPE HTML>
<html>
<head>
    <title>Hyperspace – Moziműsor</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />

    <!-- Hyperspace CSS -->
    <link rel="stylesheet" href="/app030/assets/css/main.css" />
    <link rel="stylesheet" href="/app030/assets/css/custom.css" />
    <noscript><link rel="stylesheet" href="/app030/assets/css/noscript.css" /></noscript>
</head>

<body class="is-preload">

    <!-- Oldalsáv / fejléc -->
    <section id="header">
        <header>
            <span class="image avatar">
                <img src="/app030/images/avatar_resized.png" alt="Profilkép" />
            </span>
            <h1 id="logo"><a href="/app030/">Hyperspace Cinema Network</a></h1>
            <p>Budapesti mozik és filmek NodeJS alapú portálja</p>
        </header>

        <nav id="nav">
            <ul>

                <!-- FŐOLDAL -->
                <li>
                    <a href="/app030/" class="<%= currentPath === '/' ? 'active' : '' %>">
                        Főoldal
                    </a>
                </li>

                <!-- ADATBÁZIS -->
                <li>
                    <a href="/app030/adatbazis" class="<%= currentPath === '/adatbazis' ? 'active' : '' %>">
                        Adatbázis
                    </a>
                </li>

                <!-- CRUD: Csak admin -->
                <% if (user && user.role === "admin") { %>
                    <li>
                        <a href="/app030/crud/users" class="<%= currentPath.startsWith('/crud/users') ? 'active' : '' %>">
                            CRUD – Felhasználók
                        </a>
                    </li>
                <% } %>

                <!-- KAPCSOLAT -->
                <li>
                    <a href="/app030/kapcsolat" class="<%= currentPath === '/kapcsolat' ? 'active' : '' %>">
                        Kapcsolat
                    </a>
                </li>

                <!-- ÜZENETEK: Csak bejelentkezve -->
                <% if (user) { %>
                    <li>
                        <a href="/app030/uzenetek" class="<%= currentPath === '/uzenetek' ? 'active' : '' %>">
                            Üzenetek
                        </a>
                    </li>
                <% } %>

                <!-- BELÉPÉS / REGISZTRÁCIÓ -->
                <% if (!user) { %>
                    <li>
                        <a href="/app030/login" class="<%= currentPath === '/login' ? 'active' : '' %>">
                            Bejelentkezés
                        </a>
                    </li>

                    <li>
                        <a href="/app030/register" class="<%= currentPath === '/register' ? 'active' : '' %>">
                            Regisztráció
                        </a>
                    </li>

                <% } else { %>

                    <!-- ADMIN MENU -->
                    <% if (user.role === "admin") { %>
                        <li>
                            <a href="/app030/admin" class="<%= currentPath.startsWith('/admin') ? 'active' : '' %>">
                                Admin
                            </a>
                        </li>
                    <% } %>

                    <li>
                        <a href="/app030/logout">
                            Kijelentkezés
                        </a>
                    </li>

                <% } %>

            </ul>
        </nav>

        <footer>
            <ul class="icons">
                <li>
                    <a href="https://github.com/olvodisoma/web_gy_beadando" class="icon brands fa-github">
                        <span class="label">GitHub</span>
                    </a>
                </li>
            </ul>
        </footer>
    </section>

    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Háttér animáció -->
        <div class="global-background">
            <div class="bg-blob blob1"></div>
            <div class="bg-blob blob2"></div>
            <div class="bg-blob blob3"></div>
        </div>
