<%- include("../partials/header") %>

<section id="main" class="wrapper">
    <div class="inner">
        <header class="major">
            <h2>Felhasználó szerkesztése</h2>
        </header>

        <% if (error) { %>
            <div class="alert-error"><%= error %></div>
        <% } %>

        <div class="contact-card">
            <form method="POST" action="/app030/crud/users/edit/<%= userData.id %>">
                <div class="fields">

                    <div class="field">
                        <label for="email">E-mail cím</label>
                        <input type="email" id="email" name="email"
                               value="<%= userData.email %>" required>
                    </div>

                    <div class="field">
                        <label for="role">Szerepkör</label>
                        <select id="role" name="role" required>
                            <option value="user" <%= userData.role === "user" ? "selected" : "" %>>user</option>
                            <option value="admin" <%= userData.role === "admin" ? "selected" : "" %>>admin</option>
                        </select>
                    </div>

                    <div class="field">
                        <label for="password">Új jelszó (opcionális)</label>
                        <input type="password" id="password" name="password"
                               placeholder="Ha üresen hagyod, a jelszó nem változik.">
                    </div>

                </div>

                <ul class="actions">
                    <li><button type="submit" class="button primary">Mentés</button></li>
                    <li><a href="/app030/crud/users" class="button">Mégse</a></li>
                </ul>
            </form>
        </div>

    </div>
</section>

<%- include("../partials/footer") %>
